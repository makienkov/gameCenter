<Window x:Class="gameCenter.Projects.Car.CarBomb"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CarBomb" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="GameCanvas" >
            <Canvas.Background>
                <ImageBrush ImageSource="/Projects/Car/back.jpg" Stretch="Fill"/>
            </Canvas.Background>
            <Image x:Name="PlayerCarImage" HorizontalAlignment="Left"  VerticalAlignment="Top" Source="/Projects/Car/car.jpg" Canvas.Left="0" Canvas.Top="0" Stretch="None"/>
        </Canvas>
    </Grid>
</Window>
